{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": ["NODE_ENV", "VITE_API_URL", "NEXT_PUBLIC_API_URL"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        ".next/**", "!.next/cache/**",
        ".solid/**"
      ]
    },
    "lint": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "rs:build": {
      "dependsOn": ["^rs:build"],
      "outputs": [
        "dist/**",
        "static/**"
      ]
    }
  }
}
